<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@mipmap/login_input_bac"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="　旧密码："
            android:textSize="18dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textColor="#797979"
            />

            <EditText
                android:id="@+id/old_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:maxLines="1"
                android:hint="请输入6-12位数字或字母"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_toRightOf="@+id/textView1"
                android:textColorHint="#d4c189"
                android:paddingLeft="35dp"
                android:textSize="15dp" />


    </RelativeLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@mipmap/login_input_bac"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="17dp"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="　新密码："
            android:textSize="18dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textColor="#797979"
            />


            <EditText
                android:id="@+id/new_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:maxLines="1"
                android:singleLine="true"
                android:textColorHint="#d4c189"
                android:inputType="textPassword"
                android:layout_toRightOf="@+id/textView2"
                android:hint="请输入6-12位数字或字母"
                android:paddingLeft="35dp"
                android:textSize="15dp" />


    </RelativeLayout>


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@mipmap/login_input_bac"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="17dp"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="确认密码："
            android:textSize="18dp"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textColor="#797979"
            />


            <EditText
                android:id="@+id/renew_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:maxLines="1"
                android:layout_toRightOf="@+id/textView3"
                android:textColorHint="#d4c189"
                android:inputType="textPassword"
                android:hint="请输入6-12位数字或字母"
                android:singleLine="true"
                android:paddingLeft="35dp"
                android:textSize="15dp" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/forget_show_pwd"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout3"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <CheckBox
            android:id="@+id/forget_show_pwd_check"
            android:layout_width="20dp"
            android:layout_height="12dp"
            android:button="@null"
            android:checked="true"
            android:background="@drawable/login_show_pwd"
            />

        <TextView
            android:id="@+id/forget_show_pwd_text"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="   隐藏密码"
            android:gravity="center_vertical"
            android:textSize="10dp"
            />
    </LinearLayout>




    <Button
        android:id="@+id/btn_next"
        style="@style/common_btn_style"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@mipmap/all_ok_button"
        android:text="完成"
        android:textColor="#f4f3f3" />

</LinearLayout>