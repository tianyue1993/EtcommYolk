<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/activity_image"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        fresco:actualImageScaleType="fitXY"
        fresco:failureImage="@mipmap/ic_defalt"
        fresco:placeholderImage="@mipmap/ic_defalt" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/ic_item_backgroud">


        <TextView
            android:id="@+id/suggest_activity_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="寻找旧时光"
            android:textColor="@color/nav_btn_black"
            android:textSize="15sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/suggest_activity_topic"
            android:layout_margin="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/participation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/marginmiddle"
                android:layout_weight="1"
                android:text="212人参与"
                android:textColor="#362825"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/daterange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:text="2016-12-12——2016-12-13"
                android:textColor="@color/nav_btn_black"
                android:textSize="14sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/activity_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="报名中"
                android:textColor="@color/list_text_green"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>