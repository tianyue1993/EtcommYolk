<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="etcomm.com.etcommyolk.activity.ForgotPasswordActivity">

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/login_input_bac"
            android:layout_marginTop="48dp"
            android:id="@+id/linearLayout2">


            <TextView
                android:id="@+id/forget_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:text="　新密码："
                android:textSize="18dp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/forget_new_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入6-12位数字或字母"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/forget_type"
                android:background="@null"
                android:inputType="textPassword"
                android:gravity="left|center"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:background="@mipmap/login_input_bac"
            android:id="@+id/linearLayout3">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:gravity="center"
                android:text="确认密码："
                android:textSize="18dp"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/forget_confirm_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入6-12位数字或字母"
                android:gravity="left|center"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@+id/text1"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>



        <CheckBox
            android:id="@+id/forget_show_pwd_check"
            android:layout_width="20dp"
            android:layout_height="14dp"
            android:layout_marginTop="5dp"
            android:button="@null"
            android:checked="false"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignRight="@+id/linearLayout3"
            android:layout_alignEnd="@+id/linearLayout3"
            android:background="@drawable/login_show_pwd"
            />

    <Button
        android:id="@+id/forget_commit"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="完成"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:background="@mipmap/all_fil_button"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
