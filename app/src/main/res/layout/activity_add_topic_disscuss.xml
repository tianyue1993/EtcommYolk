<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical"
    tools:context="etcomm.com.etcommyolk.activity.AddTopicDisscussActivity">

    <etcomm.com.etcommyolk.widget.ContainsEmojiEditText
        android:id="@+id/topicdisscuss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/marginsmall"
        android:background="@null"
        android:gravity="left|top"
        android:hint="说点什么吧..."
        android:maxLength="140"
        android:minLines="4"
        android:paddingLeft="@dimen/marginhuge"
        android:textCursorDrawable="@drawable/cursor_drawable" />

    <TextView
        android:id="@+id/text_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:text="0/140"
        android:textColor="#999999"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="15dp"
        android:background="#999999" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <GridView
            android:id="@+id/picgridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginhuge"
            android:layout_marginRight="30dp"
            android:horizontalSpacing="3dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="5dp"></GridView>

        <TextView
            android:id="@+id/addpictext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="38dp"
            android:text="添加照片"
            android:textColor="@color/common_black_text" />
    </RelativeLayout>

</LinearLayout>
