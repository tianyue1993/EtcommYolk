<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="@dimen/marginmiddle"
    android:background="@color/common_bg">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/health_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="@dimen/marginsmall"
        fresco:placeholderImage="@mipmap/ic_defalt_small"
        fresco:roundedCornerRadius="10dp" />

    <TextView
        android:id="@+id/healthtopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/health_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/item_healthnews_sumary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/healthtopic"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/health_image"
        android:ellipsize="end"
        android:maxLines="4"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/readingamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/item_healthnews_sumary"
        android:layout_marginRight="18dp"
        android:drawableLeft="@mipmap/eyereadcount_black"
        android:drawablePadding="@dimen/marginmiddle"
        android:paddingLeft="@dimen/marginlarge"
        android:textSize="12sp" />

</RelativeLayout>